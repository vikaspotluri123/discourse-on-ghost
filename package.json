{
  "name": "@potluri/discourse-on-ghost",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": "https://github.com/vikaspotluri/discourse-on-ghost",
  "authors": [
    "Vikas Potluri <vikaspotluri123.github@gmail.com>"
  ],
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.js",
    "lint": "xo"
  },
  "dependencies": {
    "@tryghost/errors": "^1.2.14",
    "@tryghost/logging": "^2.2.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "typescript": "^4.7.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/uuid": "^8.3.4",
    "esbuild": "^0.14.43",
    "nodemon": "^2.0.16",
    "xo": "0.49.0"
  },
  "xo": {
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-use-extend-native/no-use-extend-native": "off",
      "func-name-matching": "off",
      "no-console": "error"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
