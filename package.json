{
  "name": "@potluri/discourse-on-ghost",
  "version": "0.3.0",
  "main": "build/index.js",
  "module": "build/index.js",
  "type": "module",
  "repository": "https://github.com/vikaspotluri123/discourse-on-ghost",
  "authors": [
    "Vikas Potluri <vikaspotluri123.github@gmail.com>"
  ],
  "license": "MIT",
  "files": [
    "build"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:server": "tsx src/targets/node.ts",
    "typecheck": "tsc --noEmit",
    "lint": "xo && tsc",
    "pretest": "NO_WATCH= node scripts/dev.js",
    "test": "mocha -r dist/targets/test.js --recursive test/unit",
    "prepublish": "yarn build",
    "build": "esbuild `find src -name '*.ts'` --outdir=build --platform=node --target=node16 --format=esm"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@tryghost/admin-api": "^1.13.12",
    "@tryghost/errors": "^1.3.7",
    "@tryghost/logging": "^2.4.21",
    "axios": "^1.11.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@gradebook/release-utils": "^0.8.0",
    "@types/chai": "^5.2.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/dotenv": "^8.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.0",
    "@types/sinon": "^17.0.4",
    "chai": "^5.2.0",
    "esbuild": "^0.25.2",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "sinon": "^20.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "xo": "0.60.0"
  },
  "gradebook": {
    "cli:addSkipCIToCommit": false,
    "cli:releaseTemplate": ".github/release_template.txt"
  },
  "xo": {
    "rules": {
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "interface"
      ],
      "@typescript-eslint/naming-convention": "off",
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-use-extend-native/no-use-extend-native": "off",
      "func-name-matching": "off",
      "no-console": "error",
      "n/file-extension-in-import": "off"
    },
    "overrides": [
      {
        "files": "**/*.js",
        "rules": {
          "@typescript-eslint/consistent-type-definitions": "off"
        }
      },
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
